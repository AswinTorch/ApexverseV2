<div class="container text-center-left" id= "article_container">
  <meta name="description" content="<%= h truncate(@article.content, :length => 255) %>">
  <div class="intro-header")>
      <div class="container">
        <div class="article-heading">
          <h1 id="article_title"><%= @article.title %></h1>
            <span class="meta" id="article_info"><p id="article_name"><%= @article.name %></p><%= @article.created_at.strftime("%B, %d, %Y") %></span>
          <p>Tags: <%= raw @article.tags.map { |t| link_to t.name, articles_path(tag: t.name) }.join(', ') %></p>
        </div>
      </div>
  </div>
  <br>
  <br>
  <article>
    <div class="container">
      <p id="article_content"><%= @article.content.html_safe %></p>
    </div>
  </article>

  <%= link_to 'Back', articles_path , :class => 'btn btn-default'%>

  <%= link_to 'Edit', edit_article_path(@article), :class => 'btn btn-warning' %>
  <%= link_to 'Delete', article_path(@article), method: :delete, :class => 'btn btn-danger', data: {confirm: 'Are you sure?'} %>
