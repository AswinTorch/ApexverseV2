<div class="container" id= "post-container">
  <meta name="description" content="<%= h truncate(@post.content, :length => 255) %>">
  <div class="intro-header">
      <div class="container">
        <div class="post-heading">
          <h1 id="post-title"><%= @post.title %></h1>
          <div class="w3-row">
            <p id="post-name">By <%= @post.name %> on <%= @post.created_at.strftime("%B %d, %Y") %></p>
            <% @post.tags.each do |tag| %>
              <span class="w3-tag w3-light-grey w3-small w3-margin-bottom"><%= link_to tag.name, posts_path(tag: tag.name) %></span>
            <% end %>
          </div>
        </div>
      </div>
  </div>
  <br>
  <post>
    <div class="container" id="post-content-container">
      <p id="post-content"><%= @post.content.html_safe %></p>
    </div>
  </post>
  <div class="container">
    <% if user_signed_in? %>
      <%= link_to 'Edit', edit_post_path(@post), :class => 'btn btn-warning' %>
      <%= link_to 'Delete', post_path(@post), method: :delete, :class => 'btn btn-danger', data: {confirm: 'Are you sure?'} %>
    <% end %>
  </div><br><br>
  
  <div class="container">
    <div id="disqus_thread"></div>
